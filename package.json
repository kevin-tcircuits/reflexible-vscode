{
  "name": "reflexible-vscode",
  "displayName": "Reflexible",
  "description": "Reflexible sidebar chat and workflow integration",
  "version": "0.0.2",
  "publisher": "thinkcircuits",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkcircuits/reflexible"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:rfx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Reflexible",
      "properties": {
        "reflexible.baseUrl": {
          "type": "string",
          "default": "https://reflexible-web-dev.fly.dev",
          "description": "Base URL of Reflexible SaaS"
        },
        "reflexible.projectId": {
          "type": "string",
          "description": "Default project ID"
        }
      }
    },
    "commands": [
      {
        "command": "reflexible.authenticate",
        "title": "Reflexible: Authenticate"
      },
      {
        "command": "reflexible.reconfigureApiKey",
        "title": "Reflexible: Reconfigure API Key"
      },
      {
        "command": "reflexible.compileFile",
        "title": "Reflexible: Compile RFX File"
      },
      {
        "command": "reflexible.verifyFile",
        "title": "Reflexible: Verify RFX File"
      },
      {
        "command": "reflexible.newSession",
        "title": "Reflexible: Start New Session"
      },
      {
        "command": "reflexible.selectComputeMode",
        "title": "Reflexible: Select Compute Mode"
      },
      {
        "command": "reflexible.openChat",
        "title": "Reflexible: Open AI Chat"
      },
      {
        "command": "reflexible.renameProject",
        "title": "Rename Project"
      },
      {
        "command": "reflexible.deleteProject",
        "title": "Delete Project"
      },
      {
        "command": "reflexible.renameFile",
        "title": "Rename File"
      },
      {
        "command": "reflexible.deleteFile",
        "title": "Delete File"
      },
      {
        "command": "reflexible.saveFileToLocal",
        "title": "Save to Local Drive"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "reflexible.renameProject",
          "when": "view == reflexible.projectTree && viewItem == project",
          "group": "1_project"
        },
        {
          "command": "reflexible.deleteProject",
          "when": "view == reflexible.projectTree && viewItem == project",
          "group": "1_project"
        },
        {
          "command": "reflexible.renameFile",
          "when": "view == reflexible.projectTree && viewItem == file",
          "group": "2_file"
        },
        {
          "command": "reflexible.deleteFile",
          "when": "view == reflexible.projectTree && viewItem == file",
          "group": "2_file"
        },
        {
          "command": "reflexible.saveFileToLocal",
          "when": "view == reflexible.projectTree && (viewItem == file || viewItem == binary)",
          "group": "2_file"
        }
      ]
    },
    "keybindings": [
      {
        "command": "reflexible.deleteFile",
        "key": "delete",
        "when": "focusedView == reflexible.projectTree && (viewItem == file || viewItem == binary)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "reflexible",
          "title": "Reflexible",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "reflexible": [
        {
          "id": "reflexible.projectTree",
          "name": "Projects"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^24.6.1",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.21.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.0"
  }
}
